doctype html
html
  head
    link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")
    script(src="https://code.jquery.com/jquery-3.3.1.js")
    script
      include admin.js
    title admin
  body
    div(class="container")
        div(class="row")
        div(class="col-12")
          table(class="table table-bordered")
            thead
              tr
                th(scope="col")= 'name'
                th(scope="col")= 'surname'
                th(scope="col")= 'email'
                th(scope="col")= 'phone'
                th(scope="col")= 'text'
                th(scope="col")= ''
            tbody
              - num = 0
              each row in requests
                - num++
                  tr
                    td= row['name']
                    td= row['surname']
                    td= row['email']
                    td= row['phone']
                    td= row['text']
                    td
                      button(type='button', class='c-btn-blue c-btn-circle c-btn-uppercase w-100', value="del", onclick='delete_request("'+row['_id']+'")')='Delete'


    hr(style="width:100%;text-align:middle;margin-left:0;height:5px;border-width:0;color:gray;background-color:red")
    div(class="form-group" align="center")
      p(align='center')= 'add book'
    form(id='add_book', class='form-horizontal')
        div(class="form-group")
            label(for="title" class=('control-label col-sm-2'))= 'title'
            div(class="col-sm-10")
              input(type="text" class="form-control" id="title" name='title' placeholder="title")
        div(class="form-group")
            label(for="title_ukr" class=('control-label col-sm-2'))= 'title_ukr'
            div(class="col-sm-10")
              input(type="text" class="form-control" id="title_ukr" name='title_ukr' placeholder="title_ukr")
        div(class="form-group")
            label(for="short_info" class=('control-label col-sm-2'))= 'short_info'
            div(class="col-sm-10")
              input(type="text" class="form-control" id="short_info" name='short_info' placeholder="short_info")
        div(class="form-group")
            label(for="short_info_ukr" class=('control-label col-sm-2'))= 'short_info_ukr'
            div(class="col-sm-10")
              input(type="text" class="form-control" id="short_info_ukr" name='short_info_ukr' placeholder="short_info_ukr")
        div(class="form-group")
            label(for="full_info" class=('control-label col-sm-2'))= 'full_info'
            div(class="col-sm-10")
              input(type="text" class="form-control" id="full_info" name='full_info' placeholder="full_info")
        div(class="form-group")
            label(for="full_info_ukr" class=('control-label col-sm-2'))= 'full_info_ukr'
            div(class="col-sm-10")
              input(type="text" class="form-control" id="full_info_ukr" name='full_info_ukr' placeholder="full_info_ukr")
        button(type="submit" class="c-btn-blue c-btn-circle c-btn-uppercase w-100")= 'Add'
